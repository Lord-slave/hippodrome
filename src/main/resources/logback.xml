<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/hippodrome.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/hippodrome.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <!-- ВАЖНО: запятая вставлена как литерал между двумя %d -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss},%d{SSS} %-5level %logger{36}: %msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="ROLLING_FILE"/>
    </root>
</configuration>